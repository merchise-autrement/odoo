<?xml version="1.0" encoding="UTF-8"?>

<templates>
  <t t-name="GanttView">
    <div t-attf-class="o_gantt_view">
    </div>
  </t>
  <t t-name="GanttView.buttons">
    <div t-attf-class="btn-group btn-sm">
      <button class="o_gantt_button_scale btn btn-sm btn-default" type="button"
              value="hour">Hour
      </button>
      <button class="o_gantt_button_scale btn btn-sm btn-default" type="button"
              value="day">Day
      </button>
      <button class="o_gantt_button_scale btn btn-sm btn-default" type="button"
              value="month">Month
      </button>
      <button class="o_gantt_button_scale btn btn-sm btn-default" type="button"
              value="year">Year
      </button>
    </div>
  </t>
</templates>
